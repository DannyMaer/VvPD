morze = {'а': '•-', 'б': '-•••',  'в': '•--', 'г': '--•', 'д': '-••', 'е': '•', 'ё': '•', 'ж': '•••-', 'з': '--••', 'и': '••', 'й': '•---', 'к': '-•-', 'л': '•-••', 'м': '--', 'н': '-•', 'о': '---',  'п': '•--•', 'р': '•-•', 'с': '•••', 'т': '-', 'у': '••-', 'ф': '••-•', 'х': '••••', 'ц': '-•-•', 'ч': '---•', 'ш': '----', 'щ': '--•-', 'ъ': '--•--', 'ь': '-••-', 'э': '••-••', 'ю': '••--', 'я': '•-•-'}   
print('Введите текст для перевода в азбуку Морзе:')
c = str(input())
s=''
for i in range(len(c)):
    s+=morze.get(c[i])
print(s)
